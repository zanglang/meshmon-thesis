@INPROCEEDINGS{Bicket2005,
  author = {John Bicket and Daniel Aguayo and Sanjit Biswas and Robert Morris},
  title = {Architecture and evaluation of an unplanned 802.11b mesh network},
  booktitle = {MobiCom '05: Proceedings of the 11th annual international conference
